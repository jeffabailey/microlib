{
  "env": {
    "distributedCache": {
      "enabled": true
    },
    "serviceMesh": {
      "enabled": true
    },
    "restartWorflow": true,
    "checkIpHost": "https://checkip.amazonaws.com"
  },
  "adapters": {
    "desc": "services config",  
    "datasourceAdapter": "DataSourceFile",
    "datasources": {
      "DataSourceMemory": {
        "desc": "Non-persistent, in-memory storage",
        "enabled": false
      },
      "DataSourceFile": {
        "desc": "Persistent storage on local file system",
        "enabled": false
      },
      "DataSourceMongoDb": {
        "desc": "Persistent NoSQL, JSON document storage",
        "enabled": false,
        "url": "mongodb://localhost:27017",
        "cacheSize": 3000
      },
      "DataSourceMesh": {
        "desc": "Data distributed across service mesh network",
        "enabled": true
      }
    }
  },
  "services": {
    "serviceMesh": {
      "WebSwitch": {
        "desc": "Default implementation. Switched mesh over web sockets.",
        "enabled": false,
        "host": "localhost",
        "port": 80,
        "heartbeat": 30000,
        "debug": false,
        "uplink": null
      },
      "MeshLink": {
        "desc": "Fast, UDP-based, peer-to-peer mesh, with shared Redis cache.",
        "enabled": true
      }
    }
  }
}
